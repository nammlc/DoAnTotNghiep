
@model DoAnTotNghiep.Models.NhaKho


<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/StaffListDisplay.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/assets/font/fontawesome-free-6.5.2-web/css/all.min.css">
    <title>Chỉnh sửa thông tin nguyên liệu</title>
    
        
</head>

<body style="font-family: Arial, sans-serif">
    <header class="header d-flex justify-content-between align-items-center">
        <div class="logo-container">
            <a href="http://localhost:5295"><img src="~/css/assets/cukcuk-logo.png" alt="Logo" class="logo"></a>
            
            <div class="list-branch">
                <div class="dropdown">
                <a class="btn btn-outline-secondary dropdown-toggle branch-btn" href="#" role="button"
                    id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                    Chọn chi nhánh
                </a>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <li><a class="dropdown-item" href="#">Chi nhánh TP Hồ Chí Minh</a></li>
                    <li><a class="dropdown-item" href="#">Chi nhánh Hà Nội</a></li>
                </ul>
            </div>
            </div>
            
        </div>
        <div class="avatar-container">
            <img src="~/css/assets/icon/avatar-default.png" alt="Avatar" class="avatar">
            <div class="avatar-name">Lê Công Nam</div>
            <div class="avatar-option">
                <img src="~/css/assets/icon/option.png" alt="Options">
            </div>
        </div>
    </header>
    <div class="d-flex">
        <nav class="sidebar" style="height: 625px;">
            <ul>
                <li>
                    <i class="fa-solid fa-house" style="font-size: 27px ; color : #fff"></i>
                    <a href="http://localhost:5295/Views/NhanVien">Trang chủ</a>
                </li>
                <li>
                    <i class="fa-solid fa-chart-simple" style="font-size: 33px ; color : #fff"></i>
                    <a href="#">Thống kê</a>
                </li>
                <li>
                    <i class="fa-solid fa-users" style="font-size: 25px ; color : #fff"></i>
                    <a href="#">Nhân viên</a>
                </li>
                <li>
                    <i class="fa-solid fa-warehouse" style="font-size: 25px ; color : #fff"></i>
                    <a href="http://localhost:5295/Views/NhaKho">Nhà kho</a>
                </li>
                <li>
                    <i class="fa-solid fa-mug-hot" style="font-size: 30px ; color : #fff"></i>
                    <a href="">Món ăn</a>
                </li>
                <li>
                    <i class="fa-solid fa-gear" style="font-size: 30px ; color : #fff"></i>
                    <a href="#">Cài đặt</a>
                </li>
            </ul>
            <div class="end-sidebar" id="toggleSidebar">
                <i class="fa-solid fa-chevron-left"></i> Thu gọn
            </div>
        </nav>
        <main class="main-content">
            <div class="main-content_header" >
                <h1 class="h4">Chỉnh sửa thông tin nguyên liệu</h1>
                <button>
                    <a href="javascript:void(0)" style="text-decoration: none; color: #fff;">
                        <img src="~/css/assets/icon/add.png" alt="Add" class="me-2">
                        Thêm mới
                    </a>
                </button>
            </div>
            <div class="search-container" style="padding-bottom: 10px;">
                <div class="search-container_left">
                    <form method="get" action="@Url.Action("Index")">
                        <input type="text" id="searchInput" name="searchQuery" value="@ViewBag.SearchQuery" placeholder="Tìm kiếm theo tên nguyên liệu..." class="form-control">
                        
                        
                    </form>
                </div>
                <div class="search-container_right">
                    <div class="excel">
                        <img src="~/css/assets/icon/export-excel-50.png" alt="Export to Excel">
                    </div>
                    <div class="reload">
                        <img src="~/css/assets/icon/refresh.png" alt="Refresh">
                    </div>
                </div>
            </div>
            <form id="_EditNguyenLieu" asp-controller="NhaKho" asp-action="Edit" method="post" style="border-top: 0.5px solid gray;">
                <div class="modal-body">
                    <div class="row mb-3">
                       <input type="hidden" id="id" name="id" value="@Model.id">

                        <div class="col-md-3">
                            <label for="ten_nguyen_lieu" class="form-label">Tên nguyên liệu:</label>
                            <input type="text" class="form-control" id="ten_nguyen_lieu" name="ten_nguyen_lieu"
                                value="@Model.ten_nguyen_lieu" required>
                        </div>
                        <div class="col-md-3">
                            <label for="gia_nguyen_lieu" class="form-label">Giá nguyên liệu:</label>
                            <input type="text" class="form-control" id="gia_nguyen_lieu" name="gia_nguyen_lieu"
                                value="@Model.gia_nguyen_lieu" required> 
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="don_vi" class="form-label">Đơn vị:</label>
                            <input type="text" class="form-control" id="don_vi" name="don_vi" value="@Model.don_vi"
                                required>
                        </div>
                        <div class="col-md-4">
                            <label for="chu_thich" class="form-label">Chú thích:</label>
                            <input type="text" class="form-control" id="chu_thich" name="chu_thich" value="@Model.chu_thich"
                                required>
                        </div>
                        <div class="col-md-4">
                            <label for="nha_cung_cap" class="form-label">Nhà cung cấp:</label>
                            <input type="text" class="form-control" id="nha_cung_cap" name="nha_cung_cap"
                                value="@Model.nha_cung_cap" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label for="so_luong_trong_kho" class="form-label">Số lượng trong kho:</label>
                            <input type="text" class="form-control" id="so_luong_trong_kho" name="so_luong_trong_kho"
                                value="@Model.so_luong_trong_kho" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary" style="background-color: green;">Lưu</button>
                </div>
            </form>


        </main>
    </div>
    <footer class="footer">
        <!-- Footer content here -->
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelector(".main-content_header button").addEventListener("click", function () {
                var myModal = new bootstrap.Modal(document.getElementById('addNewStaffModal'), {
                    keyboard: false
                });
                myModal.show();
            });
        });
    </script>
    <script src="~/js/pagination.js"></script>
    <script src="~/js/shrink.js"></script>
</body>

</html>