@page
@model DoAnTotNghiep.Pages.ThongTinCaNhanModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông Tin Cá Nhân</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            font-family: "Segoe UI", Arial, sans-serif;
        }

        .profile-container {
            margin: 50px auto;
            max-width: 800px;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            padding: 25px;
        }

        .profile-header {
            text-align: center;
            margin-bottom: 25px;
        }

        .profile-header img {
            width: 130px;
            height: 130px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #6c63ff;
            margin-bottom: 15px;
        }

        .profile-header h1 {
            font-size: 2rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 5px;
        }

        .profile-header p {
            font-size: 1rem;
            color: #666;
        }

        .table {
            margin-top: 20px;
        }

        .table th {
            background-color: #6c63ff;
            color: #fff;
            text-align: center;
        }

        .table td {
            vertical-align: middle;
            text-align: center; /* Căn giữa thông tin trong các ô */
        }
    </style>
</head>
<body>
    <div class="container profile-container">
        <div class="profile-header">
            <img src="/images/default-profile.png" alt="Avatar">
            <h1>@Model.nhanVien.ten_nhan_vien</h1>
            <p><strong>Mã nhân viên:</strong> @Model.nhanVien.ma_nhan_vien</p>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Thông tin</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Giới tính</td>
                    <td>@Model.nhanVien.gioi_tinh </td>
                </tr>
                <tr>
                    <td>Ngày sinh</td>
                    <td>@Model.nhanVien.ngay_sinh.ToString("dd/MM/yyyy")</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>@Model.nhanVien.email</td>
                </tr>
                <tr>
                    <td>Địa chỉ</td>
                    <td>@Model.nhanVien.dia_chi</td>
                </tr>
                <tr>
                    <td>Số điện thoại</td>
                    <td>@Model.nhanVien.so_dien_thoai</td>
                </tr>
                <tr>
                    <td>Chức vụ</td>
                    <td>@Model.nhanVien.vi_tri</td>
                </tr>
                <tr>
                    <td>Ngân hàng</td>
                    <td>@Model.nhanVien.ten_ngan_hang</td>
                </tr>
                <tr>
                    <td>Số tài khoản</td>
                    <td>@Model.nhanVien.so_tai_khoan_ngan_hang</td>
                </tr>
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
